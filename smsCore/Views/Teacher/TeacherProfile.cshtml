            {
                <tr>
                    <td>@g</td>
                    <td>@itm.Pno</td>
                    <td>@itm.SubjectName</td>
                    <td>@itm.ClassName</td>
                    <td>@itm.SectionName</td>
                    <td>@itm.TimeFrom.ToString("h:mm tt")</td>
                    <td>@itm.TimeTo.ToString("h:mm tt")</td>

