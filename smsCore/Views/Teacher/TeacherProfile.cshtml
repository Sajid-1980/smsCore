            <tr>
                <th>S.No</th>
                <th>Class</th>
                <th>Section</th>

            </tr>
            </thead>
            <tbody>
            @{
                if (assignSubject != null)
                {
                    <tr>
                        <td>1</td>
                        <td>@assignSubject.ClassSection.Class.ClassName</td>
                        <td>@assignSubject.ClassSection.Section.SectionName</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>

