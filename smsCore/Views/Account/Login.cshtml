@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}
<style>

    .field {
        position: relative
    }

        .field input {
            background: #fff;
            height: 45px;
            outline: none;
            padding-left: 32px !important;
            border: 1px solid;
        }

    .form-control-feedback {
        font-size: 27px;
        left: 6px;
        position: absolute;
        top: 7px;
        height: 24px;
        width: 21px;
    }


    a:hover {
        color: #000;
    }

    .btn {
        background-color: crimson;
        border: none;
        border-radius: 15px;
        color: #fff;
        font-size: 14px;
        font-weight: 700;
        line-height: 34px;
        margin-bottom: 20px;
        margin-top: 30px;
        max-width: 100%;
        padding: 0 15px !important;
        width: auto;
        width: 150px;
    }

        .btn.social {
            border-radius: 2px;
            border-radius: 5px;
            font-size: 12px;
            font-weight: 200;
            line-height: initial;
            max-width: 76px;
            padding: 5px 0px !important;
        }

        .btn:hover {
            background-color: #57D7AA;
            color: #808080;
        }

    a.forgot {
        font-size: 13px;
        line-height: 45px;
        text-decoration: underline;
    }

    .lock {
        background-image: url(/assets/images/pwd.png);
        background-repeat: no-repeat;
        background-position: 1px 6px;
    }

    .user {
        background-image: url(/assets/images/user.png);
        background-repeat: no-repeat;
        background-position: 1px 6px;
    }

    .sign-in {
        background-image: url(/assets/images/login-white.png);
        background-repeat: no-repeat;
        background-position: 4px 5px;
        background-position-x: 4px;
        background-position-y: 5px;
        width: 30px;
        float: right;
        height: 30px;
        background-size: 26px 25px;
    }
</style>
<section class="inner_banner">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="full">
                    <h3>Login</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="section padding_bottom-0">
    <div class="row align-items-center full-height no-gutters">
        <div class="col">


            <div class="row no-gutters full-height align-items-center">
                <div class="col-12 col-sm-5  col-md-7">
                    <img src="/Uploads/images/site/login-bg.jpeg" class="img-fluid" />
                </div>
