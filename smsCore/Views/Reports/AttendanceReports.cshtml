        <div class="col-12">

            <div class="card">
                <div class="card-header">
                    <h4>Student Attendance Reports</h4>
                </div>
                <div class="card-body">
                    <ul>
                        <li>
                            <a href="@Url.Action("MonthlyAttendance", "AttendanceReport")">
                                <img class="profile-user-img img-responsive img-circle" src="~/Content/Photos/ReportIcons/Attendence/student/monthly attendance.png" alt="" />
                                <label>Monthly Attendance</label>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("AttendanceSheetByClass", "AttendanceReport")">
