                            </a>
                        </li>
                        @*<li>
                                <a href="@Url.Action("AttendanceAnalysis", "AttendanceReport")">
                                    <img class="profile-user-img img-responsive img-circle" src="~/Content/Photos/ReportIcons/Attendence/Staff/attendance analysis.png" alt="" />
                                    <label> Attendance Analysis</label>
                                </a>
                            </li>*@
                    </ul>

                </div>
            </div>
        </div>
    </div>
</section>
<script @resourse.JavaScript>

    $('#ReportSection a').on('click', function (e) {
        e.stopPropagation();
        var url = window.$(this).attr('href');
        Navigate(url);
        return false;

    });

</script>