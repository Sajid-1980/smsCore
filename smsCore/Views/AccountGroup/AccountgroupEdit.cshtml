 
@model  AccountGroupInfo
@{
    ViewBag.Title = "Account Group Edit";
    
        Layout = null;
    
}
<style>
    select.form-control {
        max-height: 30px;
    }
</style>
@*@using (Ajax.BeginForm("AccountgroupEdit", "AccountGroup", new AjaxOptions { HttpMethod = "POST", OnSuccess = "reloadGridData", OnComplete = "completed", LoadingElementId = "AccountgroupEditmainForm #server-progress", OnBegin = "begin" }, new { id = "AccountgroupEditmainForm" }))
