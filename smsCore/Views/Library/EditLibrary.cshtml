@model Models.Library
@{
    ViewBag.Title = "EditLibrary";
}
@*@using (Ajax.BeginForm("EditLibrary", "Library", new AjaxOptions {HttpMethod = "POST", OnComplete = "completed", LoadingElementId = "EditLibraryForm #server-progress", OnBegin = "begin"}, new {id = "EditLibraryForm", enctype = "multipart/form-data"}))
{*@
<form asp-action="EditLibrary" asp-controller="Library" data-ajax="true" data-ajax-method="post" enctype="multipart/form-data" data-ajax-complete="completed" data-ajax-begin="begin" class="form-horizontal form-label-left input_mask" id="EditLibraryForm" data_reset="true">
  
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <div class="row">
        <div class="col-12">
            <div id="message">

            </div>
        </div>
    </div>
            <div class="row">


                @Html.HiddenFor(model => model.ID)

                <div class="col-12 col-sm-6  has-feedback">
                    <label>Library Name <font class="text-danger">*</font></label>
                    <div  class="controls">
                        @Html.TextBoxFor(model => model.LibraryName, new { @class = "form-control has-feedback-left", required = "true", type = "text" })
                        <span class="fa fa-phone form-control-feedback left" aria-hidden="true"></span>
                        @Html.ValidationMessageFor(model => model.LibraryName)
                    </div>
                </div>
                <div class="col-12 col-sm-6  has-feedback">
                    <label>Code <font class="text-danger">*</font></label>
                    <div  class="controls">
                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control has-feedback-left", required = "true" })
                                        <span class="fa fa-mobile form-control-feedback left" aria-hidden="true"></span>
                                        @Html.ValidationMessageFor(model => model.Code)
                                    </div>
                </div>
                <div class="col-12 col-sm-6  has-feedback">
                    <label>Opening Time <font class="text-danger">*</font></label>
                    <div  class="controls">
                        @Html.TextBoxFor(model => model.OpeningTime, new { @class = "form-control has-feedback-left", required = "true", type = "time" })
                        <span class="fa fa-mobile form-control-feedback left" aria-hidden="true"></span>
                        @Html.ValidationMessageFor(model => model.OpeningTime)
                    </div>
                </div>

                <div class="col-12 col-sm-6  has-feedback">
                    <label>Closing Time <font class="text-danger">*</font></label>
                    <div  class="controls">
                        @Html.TextBoxFor(model => model.ClosingTime, new { @class = "form-control has-feedback-left", required = "true", type = "time" })
                        <span class="fa fa-mobile form-control-feedback left" aria-hidden="true"></span>
                        @Html.ValidationMessageFor(model => model.ClosingTime)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <input type="hidden" asp-for="ID" />
                    <button asp="Index" data-dismiss="modal" aria-label="Close" class="btn btn-danger float-right mt-4 m-md-2"> <i class="fa fa-chevron-circle-left mr-2"></i> Cancel</button>
                    <button type="submit" value="Edit" name="Update" id="updatebtn" class="btn btn-primary float-right mt-4 mr-2 m-md-2">
                        <i class="fa fa-save mr-2"></i>
                        <span>
                            <i id="server-progress" style="display: none;" class=" fa fa-spinner fa-spin "></i>
                        </span> Save
                    </button>
                </div>
            </div>
        
</form>